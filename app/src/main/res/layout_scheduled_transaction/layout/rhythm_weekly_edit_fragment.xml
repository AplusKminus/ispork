<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">


  <TextView
    android:id="@+id/rhythm_weekly_interval_label"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:text="@string/interval"
    android:labelFor="@id/rhythm_weekly_interval_field"
    app:layout_constraintBottom_toBottomOf="@+id/rhythm_weekly_interval_field"
    app:layout_constraintEnd_toStartOf="@+id/rhythm_weekly_interval_field"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/rhythm_weekly_interval_field"/>

  <EditText
    android:id="@+id/rhythm_weekly_interval_field"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:ems="4"
    android:inputType="number"
    tools:text="4"
    android:gravity="end"
    app:layout_constraintBottom_toTopOf="@+id/rhythm_weekly_check_box_first"
    app:layout_constraintEnd_toStartOf="@+id/rhythm_weekly_days_label"
    app:layout_constraintTop_toTopOf="parent"
    android:autofillHints="none"/>

  <TextView
    android:id="@+id/rhythm_weekly_days_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    tools:text="Weeks"
    app:layout_constraintBottom_toBottomOf="@+id/rhythm_weekly_interval_field"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@+id/rhythm_weekly_interval_field"/>

  <CheckBox
    android:id="@+id/rhythm_weekly_check_box_first"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/monday"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/rhythm_weekly_interval_field"/>

  <CheckBox
    android:id="@+id/rhythm_weekly_check_box_second"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/tuesday"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/rhythm_weekly_check_box_first"/>

  <CheckBox
    android:id="@+id/rhythm_weekly_check_box_third"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/wednesday"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/rhythm_weekly_check_box_second"/>

  <CheckBox
    android:id="@+id/rhythm_weekly_check_box_fourth"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/thursday"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/rhythm_weekly_check_box_third"/>

  <CheckBox
    android:id="@+id/rhythm_weekly_check_box_fifth"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/friday"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/rhythm_weekly_check_box_fourth"/>

  <CheckBox
    android:id="@+id/rhythm_weekly_check_box_sixth"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/saturday"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/rhythm_weekly_check_box_fifth"/>

  <CheckBox
    android:id="@+id/rhythm_weekly_check_box_seventh"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/sunday"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/rhythm_weekly_check_box_sixth"
    app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
