<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

  <TextView
    android:id="@+id/rhythm_list_item_description_field"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    tools:text="Every week on Mon, Wed, Fri"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

  <TextView
    android:id="@+id/rhythm_list_item_start_date_label"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="@string/start_date"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    app:layout_constraintTop_toBottomOf="@id/rhythm_list_item_description_field"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@id/rhythm_list_item_start_date_field"/>

  <TextView
    android:id="@+id/rhythm_list_item_start_date_field"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:text="2020-05-09"
    android:gravity="end"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:layout_constraintTop_toTopOf="@+id/rhythm_list_item_start_date_label"
    app:layout_constraintStart_toEndOf="@id/rhythm_list_item_start_date_label"
    app:layout_constraintEnd_toEndOf="parent"/>

  <TextView
    android:id="@+id/rhythm_list_item_end_date_label"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="@string/end_date"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    app:layout_constraintTop_toBottomOf="@id/rhythm_list_item_start_date_label"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@id/rhythm_list_item_end_date_field"/>

  <TextView
    android:id="@+id/rhythm_list_item_end_date_field"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:text="2020-07-01"
    android:gravity="end"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:layout_constraintTop_toTopOf="@id/rhythm_list_item_end_date_label"
    app:layout_constraintStart_toEndOf="@id/rhythm_list_item_end_date_label"
    app:layout_constraintEnd_toEndOf="parent"/>

  <TextView
    android:id="@+id/rhythm_list_item_occurrences_label"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="@string/total_occurrences"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginBottom="8dp"
    app:layout_constraintTop_toBottomOf="@id/rhythm_list_item_end_date_label"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@id/rhythm_list_item_occurrences_field"
    app:layout_constraintBottom_toBottomOf="parent"/>

  <TextView
    android:id="@+id/rhythm_list_item_occurrences_field"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:text="21"
    android:gravity="end"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    app:layout_constraintTop_toTopOf="@id/rhythm_list_item_occurrences_label"
    app:layout_constraintStart_toEndOf="@id/rhythm_list_item_occurrences_label"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
