<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

  <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/scheduled_transaction_edit_name_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:hint="@string/name"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/scheduled_transaction_edit_name_field"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:inputType="textPersonName"
      tools:text="Telephone Bill"/>
  </com.google.android.material.textfield.TextInputLayout>

  <TextView
    android:id="@+id/scheduled_transaction_edit_next_occurrence_label"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:text="@string/next_occurrence"
    android:textSize="18sp"
    app:layout_constraintEnd_toStartOf="@+id/scheduled_transaction_edit_next_occurrence_date_label"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/scheduled_transaction_edit_name_layout"/>

  <TextView
    android:id="@+id/scheduled_transaction_edit_next_occurrence_date_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    tools:text="2020-12-31"
    android:textSize="18sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/scheduled_transaction_edit_name_layout"/>

  <androidx.viewpager.widget.ViewPager
    android:id="@+id/scheduled_transaction_edit_view_pager"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@+id/scheduled_transaction_edit_next_occurrence_label"
    app:layout_constraintBottom_toBottomOf="parent">

    <com.google.android.material.tabs.TabLayout
      android:id="@+id/scheduled_transaction_edit_tab_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      app:layout_constraintTop_toBottomOf="@+id/scheduled_transaction_edit_next_occurrence_label">

      <com.google.android.material.tabs.TabItem
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/transaction"/>

      <com.google.android.material.tabs.TabItem
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/schedule"/>

    </com.google.android.material.tabs.TabLayout>

  </androidx.viewpager.widget.ViewPager>

</androidx.constraintlayout.widget.ConstraintLayout>
