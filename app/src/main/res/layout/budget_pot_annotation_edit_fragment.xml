<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  style="@style/ListItem">

  <ImageView
    android:id="@+id/budgetPot_annotation_edit_delete_icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@+id/budgetPot_annotation_edit_budgetPot_layout"
    app:layout_constraintBottom_toBottomOf="@+id/budgetPot_annotation_edit_budgetPot_layout"
    app:srcCompat="?attr/delete_icon" />

  <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/budgetPot_annotation_edit_budgetPot_layout"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="8dp"
    android:hint="@string/pick_budget_pot"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/budgetPot_annotation_edit_delete_icon"
    app:layout_constraintTop_toTopOf="parent">

    <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/budgetPot_annotation_edit_budgetPot_field"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:cursorVisible="false"
      android:focusable="false"
      tools:text="" />
  </com.google.android.material.textfield.TextInputLayout>

  <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/budgetPot_annotation_edit_amount_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:hint="@string/amount"
    app:layout_constraintTop_toBottomOf="@id/budgetPot_annotation_edit_budgetPot_layout"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <app.pmsoft.ispork.view.AmountInputView
      android:id="@+id/budgetPot_annotation_edit_amount_field"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:inputType="textPersonName"
      android:cursorVisible="false"
      android:focusable="false"
      android:ems="10"
      tools:text="0,00 â‚¬" />
  </com.google.android.material.textfield.TextInputLayout>

  <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/budgetPot_annotation_edit_notes_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:hint="@string/notes"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/budgetPot_annotation_edit_amount_layout"
    app:layout_constraintEnd_toEndOf="parent">

    <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/budgetPot_annotation_edit_notes_field"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:inputType="textLongMessage|textAutoCorrect|textMultiLine|textCapSentences"
      tools:text="Supermarket" />
  </com.google.android.material.textfield.TextInputLayout>

  <ImageView
    android:id="@+id/budgetPot_annotation_edit_add_icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/budgetPot_annotation_edit_notes_layout"
    app:srcCompat="?attr/add_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>
