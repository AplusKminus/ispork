      android:name="app.pmsoft.ispork.payee.PayeeEditActivity"
      android:label=""
      android:theme="@style/AppTheme" />
    <activity
      android:name="app.pmsoft.ispork.transaction.TransactionListActivity"
      android:label="@string/transaction_list_activity_title"
      android:theme="@style/AppTheme" />
    <activity
      android:name="app.pmsoft.ispork.transaction.TransactionEditActivity"
      android:label=""
      android:theme="@style/AppTheme" />
    <activity
      android:name="app.pmsoft.ispork.participant.ParticipantPickingActivity"
      android:label="@string/title_activity_participants_picking"
      android:theme="@style/AppTheme" />
    <activity
      android:name="app.pmsoft.ispork.category.CategoryPickingActivity"
      android:label="@string/title_activity_category_picking"
      android:theme="@style/AppTheme" />
